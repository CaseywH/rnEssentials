



<div class="container">
	<h1 class="page-header text-center">Certifications</h1>
	<div class="row justify-content-center">
		<a class="col-sm-4 btn btn-block btn-danger mb-2" href="/cert/add"><i class="fa fa-plus-square-o" aria-hidden="true"></i> ADD</a>
	</div>
</div>

<div class="d-flex justify-content-center mb-5">
	<div class="row mb-2">
		<ul class="list-group">
			<li class="list-group-item mx-auto mb-2">
				<h4 class="text-center">License</h4>
				<hr>
				{{#if certObj.license}}
				<div class="row mx-auto">
					{{#each certObj.license}}
						<div class="col-sm-4 mb-1">
							<div class="card" style="width: 20rem; inline-block">
								<img class="card-img-top" src="{{image}}" alt="Card image cap">
							  	<div class="card-body">
								    <h4 class="card-title">{{title}}</h4>
								    <h6 class="card-subtitle mb-2">issued: {{formatDate issued 'MMMM Do YYYY'}}</h6>
										<h6 class="card-subtitle mb-2">expiration: {{formatDate expiration 'MMMM Do YYYY'}}</h6>
							    	<p class="card-text">Notes: {{notes}}</p>
							    	<div class="row">
							    		<div class="col">
							    			<a href="/cert/edit/{{id}}" class="btn btn-secondary btn-block col"><i class="fa fa-pencil"></i> Edit</a>
							    		</div>
							    		<div class="col">
							    			<form action="/cert/{{id}}?_method=DELETE"method="POST" id="delete-form">
												<button class="btn btn-block btn-danger" type="submit"><i class="fa fa-remove"></i>Delete</button>
											</form>
							    		</div>
							    	</div>
								</div>
							</div>
						</div>
					{{/each}}
				</div>
				{{else}}
					<h5 class="text-center">Use <i class="fa fa-plus-square-o" aria-hidden="true"></i>ADD button to create entry</h5>
