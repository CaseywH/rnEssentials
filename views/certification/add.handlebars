{{#section 'head'}}
	{{> _header}}
{{/section}}



<div class="container">
	<h1 class="page-header text-center">Add Liscense/Cert</h1>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <form action="/cert" method="POST">
        <div class="form-group">
          <label for="category">Select Category</label>
          <select class="form-control" name="category">
            <option>Liscense</option>
            <option>Required Certifications</option>
            <option>Specialty Certifications</option>
            <option>Facility Specific</option>
            <option>Miscellaneous</option>
          </select>
        </div>
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" name="title" placeholder="Title">
        </div>
        <div class="form-group">
          <label for="issue-date">Issued Date</label>
          <input type="date" class="form-control" name="issued" placeholder="issued">
        </div>
        <div class="form-group">
          <label for="expiration-date">Expiration Date</label>
          <input type="date" class="form-control" name="expiration" placeholder="expired">
        </div>
        {{!-- <div class="form-group">
          <label for="file">Upload file or image</label>
          <input type="file" class="form-control" name="file" placeholder="file">
        </div> --}}
        <div class="form-group">
          <label for="notes">Notes</label>
          <textarea class="form-control" name="notes" rows="3"></textarea>
        </div>
        <button type="submit" name="submit" class="btn btn-dark">Save</button>
      </form>
    </div>
  </div>
</div>
