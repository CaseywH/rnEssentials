

<div class="container">
	<h1 class="page-header text-center">Add Liscense/Cert</h1>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <form action="/cert" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="category">Select Category</label>
          <select class="form-control" name="category">
            <option>Liscense</option>
            <option>Required Certifications</option>
            <option>Specialty Certifications</option>
            <option>Facility Specific</option>
            <option>Miscellaneous</option>
          </select>
        </div>
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" name="title" placeholder="Title">
        </div>
        <div class="form-group">
          <label for="issue-date">Issued Date</label>
          <i class="fa fa-calendar"></i><input type="date" class="form-control" name="issued" placeholder="issued">
        </div>
        <div class="form-group">
          <label for="expiration-date">Expiration Date</label>
          <i class="fa fa-calendar"></i><input type="date" class="form-control" name="expiration" placeholder="expired">
        </div>
        <div class="form-group">
          <label for="image">Card Image</label><i class="fa picture-o"></i>
          <input class="btn"type="file" id="image" name="image" accept="image/*;capture=camera">
        </div>
        <div class="form-group">
          <label for="notes">Notes</label><i class="fa sticky-note"></i>
          <textarea class="form-control" name="notes" rows="3"></textarea>
        </div>
        <button type="submit" name="submit" class="btn btn-secondary btn-block">Save</button>
      </form>
      <a href="/cert" class="btn btn-dark btn-block mt-1">Cancel</a>
    </div>
  </div>
</div>
