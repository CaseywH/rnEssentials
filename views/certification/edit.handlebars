


<div class="container">
	<h1 class="page-header text-center">Edit Liscense/Cert</h1>
</div>

<div class="container mb-5">
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <form action="/cert/{{cert.id}}?_method=PUT" method="POST">
        <div class="form-group">
          <label for="category">Select Category</label>
          <select class="form-control" name="category">
            {{#select cert.category}}
            <option>Liscense</option>
            <option>Required Certifications</option>
            <option>Specialty Certifications</option>
            <option>Facility Specific</option>
            <option>Miscellaneous</option>
            {{/select}}
          </select>
        </div>
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" class="form-control" name="title" value="{{cert.title}}">
        </div>
        <div class="form-group">
          <i class="fa fa-calendar"></i><label for="issue-date">Issued Date</label>
          <input type="date" class="form-control" name="issued" placeholder="MM/DD/YYYY" value="">
        </div>
        <div class="form-group">
          <label for="expiration-date">Expiration Date</label>
          <i class="fa fa-calendar"></i><input type="date" class="form-control" name="expiration" placeholder="MM/DD/YYYY" value="">
        </div>
       {{!--  <div class="form-group">
          <label for="image">Card Image</label><i class="fa picture-o"></i>
          <input class="btn"type="file" id="image" name="image" accept="image/*;capture=camera">
        </div> --}}
        <div class="form-group">
          <label for="notes">Notes</label><i class="fa sticky-note"></i>
          <textarea class="form-control" name="notes" rows="3">{{cert.notes}}</textarea>
        </div>
				<div class="row">
            <button type="submit" name="submit" class="btn btn-secondary btn-block d-inline-block">Save</button>
						<a href="/cert" class="btn btn-dark btn-block d-inline-block">Cancel</a>
				</div>
      </form>
    </div>
  </div>
</div>
