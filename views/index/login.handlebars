

{{#section 'head'}}
    <meta charset="utf-8">
    <title>RNessentials</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <meta name="robots" content="noindex">
{{/section}}



<div class="container">
  <div class="col s10">
    <h2 class="page-header text-center">Account Login</h2>
    <form method="post" action="/auth/login">
      <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" name="username" placeholder="Username">
      </div>
      <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password" placeholder="Password">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
    <div class="row justify-content-md-center">
      <div class="col-3 my-2 mr-1 btn btn-dark btn-inline">
            <a href="/auth/google" class="">Google</a>
      </div>
      <div class="col-3 my-2 ml-1 btn btn-dark btn-inline">
            <a href="/auth/login" class="">Facebook</a>
      </div>
      <div class="col-3 my-2 ml-1 btn btn-dark btn-inline">
            <a href="/auth/register" class="">Register as a new User</a>
      </div>
    </div>
  </div>
</div>
