<div class="container">
  <div class="col s10">
    <h2 class="page-header text-center">Account Login</h2>
    <form method="post" action="/auth/login">
      <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" name="username" placeholder="Username">
      </div>
      <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password" placeholder="Password">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
    <div class="row justify-content-md-center">
      <div class="col-md-3"><a href="/auth/google" class="btn btn-dark"><i class="fa fa-google" aria-hidden="true"></i>oogle</a></div>
      <div class="col-md-3"><a href="/auth/facebook" class="btn btn-dark"><i class="fa fa-facebook-official" aria-hidden="true"></i> Facebook</a></div>
      <div class="col-md-3"><a href="/auth/register" class="btn btn-dark"><i class="fa fa-user-plus" aria-hidden="true"></i> Register as a new user</a></div>
    </div>
  </div>
</div>
